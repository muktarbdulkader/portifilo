{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
  
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },

  
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.(js|css|json|png|jpg|jpeg|gif|ico|svg|txt|html))$",
      "headers": { "cache-control": "public, max-age=31536000" },
      "dest": "/public/$1"
    },

    
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
